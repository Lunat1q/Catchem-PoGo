<UserControl x:Class="Catchem.Pages.RouteCreatorPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:windowsPresentation="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="760">
    <Grid x:Name="RouteCreatorGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>

            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="46*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Rectangle Fill="#FFF4F4F5" StrokeThickness="0" Grid.RowSpan="4" Grid.ColumnSpan="4"/>

        <Grid Grid.Row="0" Grid.RowSpan="2"  Grid.ColumnSpan="4" Grid.Column="0">
            <Rectangle Margin="0" Grid.ColumnSpan="4">
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0,0.5" StartPoint="1,0.5">
                        <GradientStop Color="#FF9AFF7D"/>
                        <GradientStop Color="#FF97FFC2" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <Button x:Name="btn_GenerateRoute"
                    Width="Auto"
                    Height="Auto"
                    Margin="640,40,10,10"
                    Click="btn_GenerateRoute_Click"
                    Content="Generate Route"
                    FontWeight="Bold"
                    Style="{StaticResource ResourceKey=flatbutton}"
                    TextOptions.TextFormattingMode="Display">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <LinearGradientBrush.RelativeTransform>
                            <TransformGroup>
                                <ScaleTransform CenterX="0.5" CenterY="0.5" />
                                <SkewTransform CenterX="0.5" CenterY="0.5" />
                                <RotateTransform Angle="90" CenterX="0.5" CenterY="0.5" />
                                <TranslateTransform />
                            </TransformGroup>
                        </LinearGradientBrush.RelativeTransform>
                        <GradientStop Offset="0" Color="#FF9CEAEE" />
                        <GradientStop Offset="1" Color="#FF5398C0" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </Grid>
        <Grid Grid.Row ="0" Grid.Column="1" Grid.ColumnSpan="2">
            <Label x:Name="lbl_RouteCreator_Heading" Content="Route Creator" Margin="60,8,50,8" VerticalAlignment="Center" FontSize="18" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="34" HorizontalAlignment="Center" Grid.Row="0"  Width="190"/>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4">
            <windowsPresentation:GMapControl x:Name="RouteCreatorMap" MouseDoubleClick="RouteCreatorMap_MouseDoubleClick" MouseWheel="RouteCreatorMap_MouseWheel">
                <windowsPresentation:GMapControl.ContextMenu>
                    <ContextMenu>
                        <MenuItem x:Name="mi_StartPoint" Header="Start Point" Click="mi_StartPoint_Click"/>
                        <MenuItem x:Name="mi_EndPoint" Header="End Point" Click="mi_EndPoint_Click" />
                    </ContextMenu>
                </windowsPresentation:GMapControl.ContextMenu>
            </windowsPresentation:GMapControl>
        </Grid>
        <Grid Grid.Row="3" Grid.Column="0"  Grid.ColumnSpan="4">
            <Rectangle Margin="0" Grid.ColumnSpan="4">
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0,0.5" StartPoint="1,0.5">
                        <GradientStop Color="#FF9AFF7D"/>
                        <GradientStop Color="#FF97FFC2" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <Label x:Name="lbl_markerAmount" Content="Markers: 0" HorizontalAlignment="Left" Margin="10,4,0,0" VerticalAlignment="Top"/>
        </Grid>
        <Grid Grid.Row="3" Grid.Column="3">
            <Slider x:Name="sl_mapZoom" Margin="51,8,10,0" VerticalAlignment="Top" RenderTransformOrigin="3.583,0.25" Height="25" Minimum="2" Maximum="18" TickPlacement="BottomRight" Value="18" SmallChange="0" LargeChange="3" ValueChanged="sl_mapZoom_ValueChanged"/>
            <Label x:Name="lbl_Zoom" Content="Zoom:" HorizontalAlignment="Left" Margin="0,4,0,0" VerticalAlignment="Top" Width="45" Height="26"/>
        </Grid>
    </Grid>
</UserControl>
